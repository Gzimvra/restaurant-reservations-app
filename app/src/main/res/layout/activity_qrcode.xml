<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Σκανάρετε το QR κατά την είσοδό σας"
        android:textSize="18sp"
        android:textColor="#222222"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_qr_card">

        <ImageView
            android:id="@+id/qrCodeImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:scaleType="fitCenter"
            android:contentDescription="QR Code" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Το προσωπικό του εστιατορίου θα σκανάρει αυτόν τον κωδικό για να επιβεβαιώσει την κράτησή σας και να σας οδηγήσει στο τραπέζι."
        android:textSize="14sp"
        android:textColor="#444444"
        android:textAlignment="center" />
</LinearLayout>
