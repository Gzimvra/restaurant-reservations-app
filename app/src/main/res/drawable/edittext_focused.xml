<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#FFFFFF"/> <!-- White background -->
            <corners android:radius="12dp"/> <!-- Rounded corners -->
            <stroke android:color="#4CAF50" android:width="2dp"/> <!-- Green border when focused -->
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#FFFFFF"/> <!-- White background -->
            <corners android:radius="12dp"/> <!-- Rounded corners -->
            <stroke android:color="#CCCCCC" android:width="1dp"/> <!-- Default gray border -->
        </shape>
    </item>
</selector>
